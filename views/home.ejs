  <% if (guilds.length === 0) { %>
    <p>Aucun serveur disponible.</p>
  <% } else { %>
    <% guilds.forEach(guild => { %>
      <div class="server-card">
        <% if (guild.icon) { %>
        <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.webp" alt="IcÃ´ne du serveur" class="iconserveur" width="80" class="server-icon">
